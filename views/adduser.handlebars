<h1>Add Users</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form class="form" method="POST" action="/user/add">
    <div class="form-group">
        <label>ID</label>
        <input type="text" name="id"  class="form-control" placeholder="Add Id">
    </div>
    <div class="form-group">
        <label>first_name</label>
        <input type="text" name="first_name"  class="form-control" placeholder="Add first_name">
    </div>
    <div class="form-group">
        <label>last_name</label>
        <input type="text" name="last_name"  class="form-control" placeholder="last_name Id">
    </div>
    <div class="form-group">
        <label>email</label>
        <input type="text" name="email"  class="form-control" placeholder="Add email">
    </div>
    <div class="form-group">
        <label>phone</label>
        <input type="text" name="phone"  class="form-control" placeholder="Add phone">
    </div>
    <input type="submit" class="btn btn-primary" value="Save">
</form>